<view class="container">
    <view class="header">
        <v-episode class="episode" index="{{classic.index}}"></v-episode>
        <v-like bind:like="onLike" class="like" like="{{classic.like_status}}" count="{{classic.fav_nums}}"></v-like>
    </view>

    <v-movie img="{{classic.image}}" content="{{classic.content}}"></v-movie>

    <v-navi class="navi" title="{{classic.title}}" first="{{first}}" latest="{{latest}}" bind:left="onNext" bind:right="onPrevious"></v-navi>
</view>

